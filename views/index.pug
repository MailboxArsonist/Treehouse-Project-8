extends layout

block content
    p
        a.button(href='/books/new') Create New Book
    table
        tr
            th Title
            th Author
            th Genre
            th Year
        each book in books
            tr
                td
                    a(href="/books/" + book.dataValues.id)= book.dataValues.title
                td
                    a= book.dataValues.author
                td
                    a= book.dataValues.genre
                td
                    a= book.dataValues.year